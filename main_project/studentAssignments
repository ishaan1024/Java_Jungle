    <script>
        function showQuestions(clicked){
            var questions = document.getElementsByName(clicked);
            for (let i = 0; i<questions.length;i++){
                if (questions[i].style.display=="block"){
                    questions[i].style.display="none";
                    document.getElementById(clicked).innerHTML = 'View Questions';
                }
                else{
                    questions[i].style.display="block";
                    document.getElementById(clicked).innerHTML = 'Hide Questions';
                }
            }
        }
    </script>
